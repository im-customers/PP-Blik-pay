{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "bundle install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": ""
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "/workspaces/${localWorkspaceFolderBasename}/workspaces/Ruby/views/index.erb"
      ]
    },
    "vscode": {
      "extensions": [
        "rebornix.Ruby"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000]
}