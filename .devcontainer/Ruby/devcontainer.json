// For more details, see https://aka.ms/devcontainer.json.
{
    "name": "Paying with Blik or Paypal on the web",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/workspaces/Ruby",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "postCreateCommand": "bundle install",
    "postAttachCommand": {
      "Start server": "ruby index.rb"
    },
    "forwardPorts": [
      8080
    ],
    "portsAttributes": {
      "8080": {
        "label": "Preview of Paying with Blik or Paypal on the web",
        "onAutoForward": "openBrowser"
      }
    },
    "secrets": {
      "CLIENT_ID": {
        "description": "Sandbox client ID of the application.",
        "documentationUrl": "https://developer.paypal.com/api/rest/"
      },
      "CLIENT_SECRET": {
        "description": "Sandbox secret of the application.",
        "documentationUrl": "https://developer.paypal.com/api/rest/"
      },
      "WEBHOOK_ID": {
        "description": "Webhook ID",
        "documentationUrl": "https://developer.paypal.com/api/rest/"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "vsls-contrib.codetour"
        ],
        "settings": {
          "git.openRepositoryInParentFolders": "always"
        }
      }
    }
  }