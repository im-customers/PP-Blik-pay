{
  "name": "Ruby Sinatra",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/workspaces/Ruby",
  "dockerFile": "Dockerfile",

  // Uncomment the next line to use a pre-built container image from Docker Hub.
  // "image": "your-docker-image:tag",

  // Use the `settings` key to specify which extensions to install in the container.
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },

  // Use the `appPort` key to specify the port used by your Sinatra app.
  "appPort": [8080]
}
