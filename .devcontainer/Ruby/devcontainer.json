// For more details, see https://aka.ms/devcontainer.json.
{
  "name": "Ruby: Paying with Blik",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/workspaces/Ruby",
  "image": "ruby:latest",
  "updateContentCommand": "bundle install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "rails server"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "/workspaces/${localWorkspaceFolderBasename}/workspaces/Ruby/views/index.erb"
      ]
    },
  "forwardPorts": [
    8080
  ],
  "portsAttributes": {
    "8080": {
      "label": "Preview of Paying with Blik or Paypal on the web",
      "onAutoForward": "openBrowser"
    }
  },
  "secrets": {
    "CLIENT_ID": {
      "description": "Sandbox client ID of the application.",
      "documentationUrl": "https://developer.paypal.com/api/rest/"
    },
    "CLIENT_SECRET": {
      "description": "Sandbox secret of the application.",
      "documentationUrl": "https://developer.paypal.com/api/rest/"
    },
    "WEBHOOK_ID": {
      "description": "Webhook ID",
      "documentationUrl": "https://developer.paypal.com/api/rest/"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.Ruby",
        "vsls-contrib.codetour"
      ],
      "settings": {
        "git.openRepositoryInParentFolders": "always"
      }
    }
  }
}